# Composite manager
run_once picom --experimental-backends

# Numlock on
run_once numlockx

# enable local fonts in .fonts directory
xset +fp /usr/share/fonts/local &
xset +fp /usr/share/fonts/misc &
xset +fp ~/.fonts &
xset fp rehash &
fc-cache -fv &

# Run screenlock when suspending
# run_once light-locker

# Thunar deamon
thunar --daemon &

# Automount removable media
devmon &

# Power manager
xfce4-power-manager --deamon &

# Notification deamon
run_once /usr/lib/xfce4/notifyd/xfce4-notifyd

# start mpris (for bluetooth media buttons)
run_once mpris-proxy

# Gestures
run_once libinput-gestures

# Remove mouse from screen when not used
run_once unclutter

# autostart desktop entries
dex -a &